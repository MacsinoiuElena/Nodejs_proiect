<%- include('../initial/header.ejs') %>
    <div class="container">

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-item active">
                    <a class="nav-link">Proiecte</a>
                </li>
                <li class="nav-item ml-auto">
                    <a class="nav-link active" href="/projects/addProj">Adauga Proiect</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Denumire</th>
                    <th scope="col">Descriere</th>
                    <th scope="col" width="200px">Actions</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].denumire%></td>
                    <td><%= data[i].descriere%></td>
                    <td>
                        <a class="btn btn-success" href="../projects/editProj/<%=data[i].id%>">Modifica</a>                       
                        <a class="btn btn-danger" onclick="return alert('Are You sure?')" href="/projects/deleteProj/<%= data[i].id %> ">Sterge</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">Nu a fost gasit niciun proiect!</p>
        <% } %>

        </div>
    </div>

</div>
<%- include('../initial/footer.ejs') %>